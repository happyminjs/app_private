/* pages/shop/cart/cart.wxss */
.head_box{
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    vertical-align: middle;
    background: #fff;
    font-size: 26rpx;
    padding: 10rpx 10rpx;
}
.head_box image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: top;
    margin: 0 10rpx;
}

.proList{
    background: #fff;
    margin: 10rpx 0 20rpx 0;
    width: 730rpx ;
    padding: 0 10rpx;
}
.order_name{
    font-size: 32rpx;
    color: #333;
    padding: 20rpx 10rpx;
    width: 730rpx;
}
.order{
    padding: 10rpx 0;
    border-bottom: 1px solid #dfdfdf;
}
.check_pro{
    width: 38rpx;
    height: 38rpx;
    background: #f15c3a;
    border-radius: 50%;
    margin: 0 30rpx 0 20rpx;
    vertical-align: top;
    margin-top: 60rpx;
}
.pro_img{
    width: 150rpx;
    height: 150rpx;
}
.pro_info_box{
    display: inline-block;
    width: 450rpx;
    height: 150rpx;
    vertical-align: top;
    margin-left: 10rpx;
    position: relative;
}
.pro_title{
    font-size: 26rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    position: relative;
}
.pro_info{
    position: absolute;
    bottom: 0; 
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    width: 450rpx;
}
.delete_pro{
    background: #f15c3a;
    width: 40rpx;
    height: 50rpx;
    padding: 52rpx 20rpx;

}
.thanks{
    padding: 0 20rpx;
    margin-bottom: 80rpx;
}
/* 底部总计  */
.footer_box{
    position: fixed;
    width: 750rpx;
    height: 70rpx;
    bottom: 0;
    left: 0;
    text-align: right;
    z-index: 2;
    display: flex;
    display: -webkit-flex;
    justify-content: flex-end; 
    background: #fff;
    border-top: 1px solid #dfdfdf;
}
.check_total{
    /* vertical-align: bottom; */
    margin-top: 16rpx;
}
.check_total .check_pro{
     margin-top: 0rpx; 
    /* vertical-align: middle; */
}
.price_box{
    height: 70rpx;
    line-height: 70rpx;
    color: #f15c3a;
}
.total_money{
    display: inline-block;
    margin: 0 20rpx 0 10rpx;
}
.confirm_btn{
    width: 200rpx;
    background: #f15c3a;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: #fff;
}