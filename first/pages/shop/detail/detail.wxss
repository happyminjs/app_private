/* pages/shop/detail/detail.wxss */
.headPart{
    width: 750rpx;
    height: 100%;
}
.headPart .headImg{
    width: 750rpx;
    height: 750rpx;
}
.headInfo{
    position: relative;
    padding: 10rpx 20rpx;
    background: #fff;
    color: #333;
}
.headTitle{
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.priceInfo{
    position: relative;
    display: flex;
    display: -webkit-flex;
    margin: 10rpx 0 ;
}
.price{
    margin-right: 10rpx;
    color: red;
    font-size: 26rpx;
}
.price text{
    font-size: 30rpx;
}
.priceIcon{
    font-size: 26rpx;
    margin: 0 10rpx;
    border-radius: 4rpx;
    display: inline-block;
    width: 60rpx;
    height: 35rpx;
    line-height: 35rpx;
    text-align: center;
}
.priceIcon:nth-child(odd){
    background: #f80b78;
    color: #fff;
}
.priceIcon:nth-child(even){
    background: #0bc7dc;
    color: #fff;
}
.like{
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    right: 0;
}

.numPart{
    display: flex;
    display: -webkit-flex;
    justify-content:space-between;
}
.number{
    font-size: 24rpx;
}

/* 详情部分  */
.detailPart{
    background: #fff;
    margin: 10rpx 0;
    padding: 10rpx;
    position: relative;
}

