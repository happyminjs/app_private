/* pages/shop/shopcenter/shopcenter.wxss */
@import '/public/prolist.wxss';
.shop_head{
    width: 100%;
    height: 300rpx;
    position: relative;
}
.head_back{
    width: 100%;
    height: 100%;
}
.shop_info{
    position: absolute;
    left: 50%;
    top:50%;
    transform: translate(-50%,-50%);
}
.head_img{
    width: 170rpx;
    height: 170rpx;
    border-radius: 50%;
    display: block;
}
.shop_name{
    display: block;
    max-width: 170rpx;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    text-overflow:ellipsis;
    white-space:nowrap;
    overflow: hidden;
}