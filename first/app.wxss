/**app.wxss**/
.container {
    height: 100%; 
    display: flex; 
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
} 

page{
    background: #f1f1f1;
    font-size: 26rpx;
    color: #333;
}
.middle{
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    -webkit-transform:  translateX(-50%);
}
.display_block{
    display: block;
}
.display_inlineblock{
    display: inline-block;
}

/* 两个按钮的弹窗样式  */
.two_btn_box{
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 750rpx;
    background: rgba(0,0, 0, 0.4);
    z-index: 99;
}
.two_btn{
    width: 450rpx;
    background: #ffffff;
    position: relative;
    top: 30%;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 10rpx;
}
.two_btn_content_box{
    padding: 30rpx 10rpx;
    text-align: center;
    vertical-align: middle;
    min-height: 80rpx;
    font-size: 28rpx;
}
.btn_box{
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    border-top: 1px solid #fafafa;
    display: flex;
    display: -webkit-flex;
}
.two_btn_btn{
    width: 50%;
    text-align: center;
}
.two_btn_cancle_btn{
    border-right: 1px solid #fafafa;
}
.toast_content{
    position: relative;
    top: 40%;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    background: rgba(0,0, 0, 0.7);
    display: inline-block;
    color: #ffffff;
    font-size: 28rpx;
    padding: 4rpx 20rpx;
    border-radius: 4rpx;
}
 .toast_box{
    position:fixed;
    top:0;
    bottom:0;
    width: 750rpx;
    z-index: 100;
} 